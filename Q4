

//Q4

object oddEven extends App {

    def oddOreven(n:Int):Boolean = n match{
          case 0 =>true
          case 1 => false
          case _ =>oddOreven(n-2)

    }

    def answer(n:Int):Unit = {
         if(oddOreven(n)){
            println("Even");
         }else{
             println("Odd");
         }
    }

    
    answer(5);
}
